<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Group Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Group"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Group Name"
            android:padding="12dp"
            android:textSize="16sp"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <!-- Member Name and Number Input -->
        <EditText
            android:id="@+id/etMemberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Member Name"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/etMemberNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Member Number"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_marginTop="16dp"
            tools:ignore="Autofill,HardcodedText" />

        <!-- Add Member Button -->
        <Button
            android:id="@+id/btnAddMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Member"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />

        <!-- ListView to Display Members -->
        <ListView
            android:id="@+id/lvMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            tools:ignore="NestedScrolling" />

        <!-- Save Group Button -->
        <Button
            android:id="@+id/btnSaveGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Group"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>